@model IEnumerable<TaThiVanAnhBTH2.Models.Customer>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a class="btn btn-success" asp-action="Create">Create a new Customer</a>
</p>
<table class="table table-all">
	<tr>
		<th>Customer ID</th>
		<th>Customer Name</th>
		<th>Customer Age</th>
		<th>Customer Phone</th>
		<th>Customer Address</th>
		<th></th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@Html.DisplayFor(m => item.CustomerID)</td>
			<td>@Html.DisplayFor(m => item.CustomerName)</td>
			<td>@Html.DisplayFor(m => item.CustomerAge)</td>
			<td>@Html.DisplayFor(m => item.CustomerPhone)</td>
			<td>@Html.DisplayFor(m => item.CustomerAddress)</td>
			<td>
				<a asp-action="Edit" asp-route-id="@item.CustomerID">Edit</a>
				<a asp-action="Details" asp-route-id="@item.CustomerID">Details</a>
				<a asp-action="Delete" asp-route-id="@item.CustomerID">Delete</a>
			</td>
		</tr>
	}
</table>